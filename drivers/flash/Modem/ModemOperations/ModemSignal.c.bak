typedef enum
{
    MODEM_SIGNAL_STATE_UNINITIALIZED = 0,
    
    MODEM_SIGNAL_STATE_DISABLED,
    
    MODEM_SIGNAL_STATE_IDLE,
    
    MODEM_SIGNAL_STATE_START,
    MODEM_SIGNAL_STATE_RUN_CSQ,
    
    MODEM_SIGNAL_STATE_PASS,
    MODEM_SIGNAL_STATE_FAIL,
    
    MODEM_SIGNAL_STATE_MAX,
}ModemPowerStateEnum;

const CHAR *    cModemSignalStateMachineName[MODEM_SIGNAL_STATE_MAX] = 
{
    "UNINITIALIZED",
    
    "Signal Disabled",
    
    "Signal Idle",
    
    "Signal Start",
    "Signal Csq",
    
    "Signal Pass",
    "Signal Fail",
};


////////////////////////////////////////////////////////////////////////////////////////////////////
// unique from this module
static BOOL                             gfIsSignalAcquired;

//
static ModemDataType                   *gpModemData;

// operation
static BOOL                             gfIsWaitingForNewCommand;
static ModemStateMachineType            gtStateMachine;
static ModemCommandSemaphoreEnum        geSemaphore;

////////////////////////////////////////////////////////////////////////////////////////////////////
    
//////////////////////////////////////////////////////////////////////////////////////////////////
//!
//!
//////////////////////////////////////////////////////////////////////////////////////////////////
void ModemSignalInit( void )
{
    // set state machine to a initial state.
    StateMachineInit( &gtStateMachine.tState );       

    //ModemResponseModemDataSemaphoreReserve( &geSemaphore );
    //gpModemData = ModemResponseModemDataGetPtr( &geSemaphore );    
    gpModemData = ModemResponseModemDataGetPtr();
    //ModemResponseModemDataSemaphoreRelease( &geSemaphore );
    if( gpModemData == NULL )
    {
        // catch this bug on development time
        while(1);
    }
}

//////////////////////////////////////////////////////////////////////////////////////////////////
//!
//!
//////////////////////////////////////////////////////////////////////////////////////////////////
void ModemSignalRun( void )
{
    if( gfIsWaitingForNewCommand )
    {
        // indicate command will start running so more commands are not accepted
        gfIsWaitingForNewCommand = FALSE;
        
        StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_START );
    }
}

//////////////////////////////////////////////////////////////////////////////////////////////////
//!
//!
//////////////////////////////////////////////////////////////////////////////////////////////////
BOOL ModemSignalIsWaitingForCommand( void )
{
    return gfIsWaitingForNewCommand;
}

//////////////////////////////////////////////////////////////////////////////////////////////////
//!
//!
//////////////////////////////////////////////////////////////////////////////////////////////////
BOOL ModemSignalIsSignalAcquired( void )
{
    return gfIsSignalAcquired;
}

//////////////////////////////////////////////////////////////////////////////////////////////////
//!
//!
//////////////////////////////////////////////////////////////////////////////////////////////////
void ModemSignalStateMachine( void )
{
    StateMachineUpdate( &gtStateMachine.tState );

    if( StateMachineIsFirtEntry( &gtStateMachine.tState ) )
    {
        // print message that power is on
        ModemConsolePrintDbg( "MDM SM <%s>", cModemSignalStateMachineName[gtStateMachine.tState.bStateCurrent] );        
    }

    switch( gtStateMachine.tState.bStateCurrent )
    {
        case MODEM_SIGNAL_STATE_UNINITIALIZED:
        {
            // go to waiting for operation to run
            StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_DISABLED );
            break;
        }
        
        case MODEM_SIGNAL_STATE_DISABLED:
        {
            //////////////////////////////////////////////////
            // DISABLED
            // not allowed to run operation
            //////////////////////////////////////////////////
        
            if( StateMachineIsFirtEntry( &gtStateMachine.tState ) )
            {
                // clear data strings
                gpModemData->tSignal.sgBer_Percent  = 99;
                gpModemData->tSignal.idwRssi_dBm    = 99;
            }

            gfIsWaitingForNewCommand     = FALSE;
            gfIsSignalAcquired           = FALSE;
        
            if( ModemConnectIsConnected() )
            {
                StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_IDLE );
            }
            break;
        }
        
        case MODEM_SIGNAL_STATE_IDLE:
        {
            //////////////////////////////////////////////////
            // IDLE
            // waiting for new operation request
            //////////////////////////////////////////////////

            gfIsWaitingForNewCommand    = TRUE;
            
            if( ModemConnectIsConnected() == FALSE )
            {
                StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_DISABLED );
            }
            break;
        }
         
        case MODEM_SIGNAL_STATE_START:
        {
            gfIsSignalAcquired = FALSE;
            
            StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_RUN_CSQ );
            break;
        }
        
        case MODEM_SIGNAL_STATE_RUN_CSQ:
        {
            if( StateMachineIsFirtEntry( &gtStateMachine.tState ) )
            {
                if( ModemCommandProcessorReserve( &geSemaphore ) )
                {
                    ModemCommandProcessorResetResponse();                    
                    ModemCommandProcessorSetExpectedResponse( TRUE, "+CSQ:", 1, TRUE );
                    
                    // if need to wait for response set time out
                    StateMachineSetTimeOut( &gtStateMachine.tState, 1000 );
                    
                    ModemCommandProcessorSendAtCommand( "+CSQ" );
                }
                else
                {
                    // Set ERROR
                    ModemEventLog
                (
                    TRUE,
                        "signal[%s] Error='%s'", 
                        cModemSignalStateMachineName[gtStateMachine.tState.bStateCurrent], 
                        "semaphore busy" 
                    );

                    // before change state always release semaphore
                    ModemCommandProcessorRelease( &geSemaphore );
                    StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_FAIL );
                    break;
                }                        
            }
            
            if( ModemCommandProcessorIsResponseComplete() )
            {                
                if( ModemCommandProcessorIsError() )
                {
                    StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_FAIL );
                }
                else
                {                
                    StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_PASS );
                }
                // before change state always release semaphore
                ModemCommandProcessorRelease( &geSemaphore );
                break;
            }

            if( StateMachineIsTimeOut( &gtStateMachine.tState ) ) 
            {
                // Set ERROR
                ModemEventLog
                (
                    TRUE,
                        "signal[%s] Error='%s'", 
                        cModemSignalStateMachineName[gtStateMachine.tState.bStateCurrent], 
                        "timeout" 
                    );

                // before change state always release semaphore
                ModemCommandProcessorRelease( &geSemaphore );
                StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_FAIL );
            }
            break;
        }
        
        case MODEM_SIGNAL_STATE_PASS:
        {
            gfIsSignalAcquired = TRUE;
            
            ModemConsolePrintf( "Modem Signal pass\r\n" );

            StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_IDLE );
            break;
        }
        
        case MODEM_SIGNAL_STATE_FAIL:
        {
            gfIsSignalAcquired = FALSE;
                        
            // clear data 
            gpModemData->tSignal.sgBer_Percent  = 99;
            gpModemData->tSignal.idwRssi_dBm    = 99;

            ModemConsolePrintf( "Modem Signal fail\r\n" );
            
            StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_IDLE );
            break;
        }
        
        default:
        {
            StateMachineChangeState( &gtStateMachine.tState, MODEM_SIGNAL_STATE_UNINITIALIZED );            
            break;
        }
    }
}


ModemDataSignalInfoType  * ModemSignalGetDataPtr        ( void )
{
    return &gpModemData->tSignal;    
}